<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:weightSum="15"
android:background="#F5FFFA">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="3"/>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="8"
    android:orientation="horizontal"
    android:padding="10dp"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:weightSum="10"
        android:padding="10dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/meditation">

        </ImageView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="9" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="9"
        android:weightSum="10"
        android:padding="10dp"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="top"
            android:padding="10dp"
            android:textSize="17dp"
            android:textStyle="bold"
            android:text="◆ 명상은 뇌의 균형 유지하는데 큰 도움"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="top"
            android:padding="10dp"
            android:textSize="17dp"
            android:textStyle="bold"
            android:text="◆ 모든 동작은 바른 자세로 편안하게 앉아 진행"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="top"
            android:padding="10dp"
            android:textSize="17dp"
            android:textStyle="bold"
            android:text="◆ 소리 킨 채로 실행 후 아래의 행동을 진행"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="top"
            android:padding="10dp"
            android:textSize="17dp"
            android:textStyle="bold"
            android:text="Step1. 눈을 감은 채로 눈의 움직임을 느낀다."/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="top"
            android:padding="10dp"
            android:textSize="17dp"
            android:textStyle="bold"
            android:text="Step2. 눈을 천천히 뜨며 고개를 아래로 떨군다."/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="top"
            android:padding="10dp"
            android:textSize="17dp"
            android:textStyle="bold"
            android:text="Step3. 고개를 크게 돌리며 제자리로 돌아온다."/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:gravity="top"
            android:padding="10dp"
            android:textSize="17dp"
            android:textStyle="bold"
            android:textColor="#FF0000"
            android:text="Step4. 모든 동작은 1분 이내로 반복하여 실행한다!"/>




    </LinearLayout>
</LinearLayout>



</LinearLayout>